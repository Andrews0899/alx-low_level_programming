SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

CC = gcc


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

$(SRC:.c=.o): $(SRC) m.h
	$(CC) -Wall -Werror -Wextra -pedantic -c $< -o $@

clean:
	-@$(RM) $(NAME) *~ \#*\# $(OBJ)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

